<h1><%= "#{@movie.title}"%>'s details<h1>
<p><%= @movie.creation_year %></p>
<p><%= @movie.genre %></p>
<% @actors.each do |actor| %>
    <p><%= actor.name %></p>
    <p><%= actor.age %></p>
    <% end %>
<p>Average Actor Age: <%= @avg_age %></p>

<%= form_with url:"/movies/#{@movie.id}", method: :get, local: true do |form|%>
<%= form.label :search %>
<%= form.text_field :search>
<%= form.submit %>
